<!-- gestion_inventario/views/producto_view.xml -->
<odoo>
    <data>
        <record id="view_producto_tree" model="ir.ui.view">
            <field name="name">producto.tree</field>
            <field name="model">gestion_inventario.producto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="price"/>
                    <field name="stock_quantity"/>
                </tree>
            </field>
        </record>

        <record id="view_producto_form" model="ir.ui.view">
            <field name="name">producto.form</field>
            <field name="model">gestion_inventario.producto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="price"/>
                            <field name="stock_quantity"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
